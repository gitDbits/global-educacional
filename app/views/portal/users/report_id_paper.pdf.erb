<!DOCTYPE html>
<html>
  <head>
    <%= wicked_pdf_stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' %>
    <%= wicked_pdf_javascript_include_tag %>
    <title>Etiquetas</title>
    <style>
      @page {
        size: A4;
        margin: 9mm 7mm;
      }
      body {
        font-family: "Arial", sans-serif;
        font-size: 10pt;
        margin: 0;
        padding: 0;
      }
      .container {
        width: 100%;
        padding-left: 7mm; /* Margem esquerda */
        padding-right: 7mm; /* Margem direita */
        padding-top: 9mm; /* Margem superior */
      }
      .row {
        clear: both;
        content: "";
        display: table;
      }
      .etiqueta {
        width: 63.5mm;
        height: 31mm;
        float: left;
        box-sizing: border-box;
        padding: 2mm;
        margin-right: 7mm; /* Espaçamento entre as etiquetas */
        margin-bottom: 9mm; /* Espaçamento entre as fileiras */
      }
      .etiqueta:nth-child(3n) {
        margin-right: 0; /* Remove a margem direita da terceira etiqueta de cada linha */
      }
    </style>
  </head>
  <body>
    <div class="container">
      <% 27.times do |index| %>
        <div class="etiqueta">
          <!-- Conteúdo da etiqueta, como texto ou imagens -->
          Etiqueta <%= index + 1 %>
        </div>
        <% if (index + 1) % 3 == 0 %>
          <div class="row"></div>
        <% end %>
      <% end %>
    </div>
  </body>
</html>
