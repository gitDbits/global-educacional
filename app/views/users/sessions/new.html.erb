<div id="main-wrapper">
  <div class="position-relative overflow-hidden radial-gradient min-vh-100 w-100 d-flex align-items-center justify-content-center">
    <div class="d-flex align-items-center justify-content-center w-100">
      <div class="row justify-content-center w-100">
        <div class="col-md-8 col-lg-6 col-xxl-3 auth-card">
          <% flash.each do |name, msg| %>
            <% if msg.is_a?(String) %>
              <div class="alert <%= bootstrap_class_for_flash(name) %> alert-dismissible fade show" role="alert">
                <strong><%= content_tag :div, msg, id: "flash_#{name}", class: 'text-center' %></strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            <% end %>
          <% end %>
          <div class="card mb-0">
            <div class="card-body">
              <%= link_to root_pt_path, class: 'd-flex align-items-center justify-content-center' do %>
                <img src="../assets/img/logo/logo.png" alt="logo">
              <% end %>
              <div class="position-relative text-center my-4">
                <strong class="text-dark">ACESSO ADMINISTRATIVO</strong>
              </div>
              <%= form_for(resource, as: resource_name, url: new_user_session_pt_path(resource_name), class: 'auth-login-form mt-2') do |f| %>
                <div class="mb-3">
                  <%= f.label :email, class: 'form-label' %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
                </div>
                <div class="mb-4">
                  <%= f.label :password, class: 'form-label' %>
                  <%= f.password_field :password, class: 'form-control', autocomplete: "current-password" %>
                </div>
                <div class="d-flex align-items-center justify-content-between mb-4">
                  <div class="form-check">
                    <%= f.check_box :remember_me, class: 'form-check-input primary' %>
                    <%= f.label 'Lembrar-me', class: 'form-label' %>
                  </div>
                </div>
                <%= f.submit 'ENTRAR', class: 'btn btn-primary w-100 py-8 mb-4 rounded-2'  %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
